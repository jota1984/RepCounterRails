<div class="col-xs-12">
  <h1 class="text-center">Workouts</h1>                                                               
</div>
                                                                                
<div class="col-xs-offset-1 col-xs-10">
  <table class="table table-bordered table-hover table-condensed">                                                                         
    <thead>                                                                       
      <tr>                                                                        
        <th>Start Time</th>                                                           
        <th>Push ups</th>                                                         
        <th>Squats</th>                                                           
        <th>Temperature (F)</th>                                                           
        <th>Heart rate (bpm)</th>                                                           
        <th></th>                                                           
      </tr>                                                                       
    </thead>                                                                      
                                                                                  
    <tbody>                                                                       
      <% @workouts.each do |workout| %>                                               
        <tr>
          <td><%= workout.start_time.localtime.strftime("%Y-%m-%d %H:%M")%></td>                                          
          <td><%= workout.pushups %></td>                                         
          <td><%= workout.squats %></td>                                          
          <td><%= workout.avg_temp.to_i %></td>                                          
          <td><%= workout.avg_hr.to_i  %></td>                                          
          <td><%= link_to "view", workout %></td>                                          
        </tr>                                                                     
      <% end %>                                                                   
    </tbody>                                                                      
  </table>                                                                        
</div>
                                                                                
                                                                                
<div class="text-center col-xs-12">
  <%= link_to 'New Workout', workouts_path, {method: :post, class: "btn btn-primary" }  %>  
</div>
